datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  price     Int
  category  String
  images    String
  colors    String
  sizes     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model CartItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  slug      String
  name      String
  price     Int
  image     String
  color     String
  size      String
  qty       Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model WishlistItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  slug      String
  name      String
  price     Int
  image     String
  color     String
  size      String
  createdAt DateTime @default(now())

  @@index([userId])
  @@unique([userId, productId, color, size])
}

